{
  "manifest_version": 2,
  "name": "Netflix Subtitles Grabber",
  "permissions": [
    "notifications",
    "tabs",
    "storage",
    "https://www.netflix.com/*",
    "http://*.syn.dict.cc/*"
  ],
  "version": "0.1",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Grabber"
  },
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [ "https://*.netflix.com/*" ],
      "js": ["jquery.min.js","content.js"]
    }
  ],
  "background": {
    "persistent": true,
    "scripts": [ "jquery.min.js", "background.js" ]
  }
}