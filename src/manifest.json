{
  "manifest_version": 2,
  "name": "Netflix Subtitles Grabber",
  "version": "0.1",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Grabber"
  },
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [ "https://*.netflix.com/*" ],
      "js": ["jquery.min.js","content.js"]
    }
  ],
  "background": {
    "scripts": [
      "jquery.min.js",
      "subtitle.js",
      "background.js"
    ]
  },
  "permissions": [
    "notifications",
    "tabs",
    "http://*.syn.dict.cc/*"
  ]
}